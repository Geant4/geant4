# 15 MeV n + 54Fe
testFe54Neutron15MeV:
	$(G4WORKDIR)/bin/$(G4SYSTEM)/inclAblaStandAlone 54 26 2 15 10000 Fe54Neutron15MeV.out
	$(G4WORKDIR)/bin/$(G4SYSTEM)/out2root Fe54Neutron15MeV.out ../data/testrunFe54Neutron15MeV_withabla.root

# 44 MeV p + 93Nb
testNb93Proton44MeV:
