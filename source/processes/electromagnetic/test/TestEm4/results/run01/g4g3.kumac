macro g4g3.kumac
*
set * ; opt * 
*
filecase keep
h/file 1 04jun99.paw
h/file 2 ../../geant3/results/run01/04jun99.paw

set *fon -40
set mscf 1.5

set ygti 0.5  ; set gsiz 0.35 ; set ymgu 1.5
set vsiz 0.25 ; set yval 0.3  ; set ylab 0.55
set asiz 0.25 ; set yhti 0.9  ; set xlab 1.2 

title 'C6F6  Gamma 9 MeV   G4-G3 comparison'

opt stat
opt logy
set dmod 1 ; set hcol 4 ; set plci 4
h/pl //lun1/1
key 2 30000 1  'G4' ! l
set dmod 2 ; set hcol 2 ; set plci 2
h/pl //lun2/1 s
key 2 20000 2  'G3 ' ! l
atitle MeV #evts
exec Redraw-Axis

*close 0
return

Macro Redraw-Axis
set plci 1
   X1 = $GRAFINFO('WNXMIN')
   X2 = $GRAFINFO('WNXMAX')
   Y1 = $GRAFINFO('WNYMIN')
   Y2 = $GRAFINFO('WNYMAX')
   IS = $GRAFINFO('?FAIS')
   IC = $GRAFINFO('?FACI')
   Set FAIS 0 ; Set FACI 1
   Box [X1] [X2] [Y1] [Y2]
   Set FAIS [IS] ; Set FACI [IC]
   Tick XL [X1] !
*   Tick YB ! [Y1]
   Return
