# Adjust just x
#
/test/gridSizes 0 0 0 m
/solid/G4trd 0.5 1.5 1 1 1
/test/errorFileName trd.b1.log
/test/run
#
/test/gridSizes 0.2 0.2 0.2 m
/test/errorFileName trd.b2.log
/test/run
#
# --- trd.c1.log
# Adjust x and y
#
/test/gridSizes 0 0 0 m
/solid/G4trd 0.5 1.5 0.25 1 1
/test/errorFileName trd.c1.log
/test/run
#
/test/gridSizes 0.2 0.2 0.2 m
/test/errorFileName trd.c2.log
/test/run
#
#
# --- trd.d1.log
# extreme case
#
/test/widths 1 0.00002 1 m
/test/gridSizes 0 0 0 m
/solid/G4trd 0.000001 1 0.00001 0.00002 1
/test/errorFileName trd.d1.log
/test/run
