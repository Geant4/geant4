inline
G4double G4Sphere::GetCubicVolume()
{
  if(fCubicVolume != 0.) {;}
  else { fCubicVolume = fDPhi*(std::cos(fSTheta)-std::cos(fSTheta+fDTheta))*
                              (fRmax*fRmax*fRmax-fRmin*fRmin*fRmin)/3.; }
  return fCubicVolume;
}
