// ********************************************************************
// Clone
// ********************************************************************
//
inline
G4Navigator* G4Navigator::Clone() const
{
  G4Navigator* clone_nav = new G4Navigator();
  clone_nav->SetWorldVolume(fTopPhysical);
  if( fpExternalNav != nullptr )
  {
    clone_nav->SetExternalNavigation(fpExternalNav->Clone());
  }
  return clone_nav;
}
