namespace CLHEP {

inline double HepRandom::flat(HepRandomEngine* theNewEngine)
{
  return theNewEngine->flat();
}

inline void HepRandom::flatArray(HepRandomEngine* theNewEngine, 
                                 const int size, double* vect)
{
  theNewEngine->flatArray(size,vect);
}

