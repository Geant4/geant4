}

inline bool read_bool(hid_t a_loc,const std::string& a_name,bool& aValue) {
  unsigned char value = 0;
  if(!read_scalar<unsigned char>(a_loc,a_name,H5T_NATIVE_UCHAR,value)) {
    aValue = false;
    return false;
  }
  if((value!=0) && (value!=1)) {
    aValue = false;
    return false;
  }
  aValue = (value==1?true:false);
  return true;
}

