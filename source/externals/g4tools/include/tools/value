    case INT_STAR:
    case STRING:         return 12;

    //case ARRAY_UNSIGNED_CHAR:
    //case ARRAY_CHAR:

    case ARRAY_UNSIGNED_SHORT:
    case ARRAY_SHORT:
    case ARRAY_UNSIGNED_INT:
    case ARRAY_INT:
    case ARRAY_UNSIGNED_INT64:
