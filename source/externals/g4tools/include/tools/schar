#ifndef tools_schar
#define tools_schar

#include <string>

namespace tools {

inline bool is_spaces(const std::string& a_string){
  std::string::const_iterator it;
  for(it=a_string.begin();it!=a_string.end();++it) {
    if((*it)!=' ') return false;
  }
  return true;
}

}

#endif
