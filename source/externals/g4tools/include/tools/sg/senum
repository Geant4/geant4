inline bool sline_pattern(const std::string& a_s,lpat& aPattern){
  if(a_s=="solid") {
    aPattern = line_solid;
  } else if(a_s=="dashed") {
    aPattern = line_dashed;
  } else if(a_s=="dotted") {
    aPattern = line_dotted;
  } else if(a_s=="dash_dotted") {
    aPattern = line_dash_dotted;
  } else {
    aPattern = line_solid;
    return false;
  }
  return true;
}

