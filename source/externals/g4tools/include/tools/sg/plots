  plotter& current_plotter() {
    update_if_touched();
    separator* sep = (separator*)m_sep[m_current];
    return *((plotter*)(*sep)[PLOTTER()]);
  }
  plotter* find_plotter(unsigned int a_index) {
    update_if_touched();
    if(a_index>=m_sep.size()) return 0;
    separator* sep = (separator*)m_sep[a_index];
    return (plotter*)(*sep)[PLOTTER()];
  }

