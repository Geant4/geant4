#ifndef tools_chars
#define tools_chars

namespace tools {

// some char ASCII code :
// \0      : 0
// \n = LF : 10
// \r = CR : 13
// \t = HT : 9
// ,       : 44

inline char LF() {return 10;}
inline char CR() {return 13;}

}

#endif
