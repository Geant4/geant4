}

inline void CHIJXY(int a_id,int a_i,int a_j,rarg& aX,rarg& aY){
  rarg x,y;
#ifdef WIN32
  HIJXY(&a_id,&a_i,&a_j,&x,&y);
#else
  hijxy_(&a_id,&a_i,&a_j,&x,&y);
#endif
  aX = x;
  aY = y;
}

