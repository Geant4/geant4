//for sf, mf :
template <class T>
inline const T* get_data(const mat4<T>& a_v) {return a_v.data();}

}

#include <ostream>

namespace tools {

template <class T>
inline std::ostream& operator<<(std::ostream& a_out,const mat4<T>& a_mtx){
  const T* v = a_mtx.data();
  a_out << v[0] << "," << v[4] << "," << v[ 8] << "," << v[12]
        << std::endl
        << v[1] << "," << v[5] << "," << v[ 9] << "," << v[13]
        << std::endl
        << v[2] << "," << v[6] << "," << v[10] << "," << v[14]
        << std::endl
        << v[3] << "," << v[7] << "," << v[11] << "," << v[15]
        << std::endl;
  return a_out;
}

}

