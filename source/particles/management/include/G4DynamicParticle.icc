}

inline G4double G4DynamicParticle::GetLogKineticEnergy() const
{
  if (theLogKineticEnergy == DBL_MAX) { 
    theLogKineticEnergy = (theKineticEnergy > 0.) ? G4Log(theKineticEnergy) : LOG_EKIN_MIN;
  }
  return theLogKineticEnergy;
}

